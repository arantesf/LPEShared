                Text="Pisos e Juntas" />
            <TextBlock
                HorizontalAlignment="Center"
                Foreground="White"
                Text="V2.0.0" />
            <TextBlock
                HorizontalAlignment="Center"
                Foreground="White"
                Text="" />
            <TextBlock
                HorizontalAlignment="Center"
                Foreground="White"
                Text="LPE e FCA" />
            <TextBlock
                HorizontalAlignment="Center"
                Foreground="White"
                Text="fernando.carantes@outlook.com" />
